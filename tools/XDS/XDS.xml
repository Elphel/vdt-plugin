        "coverflow"
        "foverflow"
      </group>
      <group label="Decor">
        "decor"
        "errlim"
        "errfmt"
      </group>
      <group label="Project Options">
        "lookup_def"
        "lookup_mod"
        "lookup_ob2"
        "lookup_sym"
        "lookup_obj"
        "lookup_lib"
        "lookup_exe"
      </group>
    </input>

  <!-- Output definitions -->
    <output>
      <line name="cmdline" sep=" ">
        "=a" "=m" "%CompilationModule"
        "%m2extensions" "%m2addtypes" "%o2extensions" "%o2isopragma" "%o2numext" "%m2base16"
