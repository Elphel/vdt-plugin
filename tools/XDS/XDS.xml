        "comment"
        "longname"
        "lineno"
        "noheader"
      </group>
      <group label="Make">
        "extexe"
        "extdll"
        "extexp"
      </group>
      <group label="Target">
        "multithread"
        "genlib"
        "exename"
        "libname"
        "heaplimit"
        "stacklimit"
        "gcthreshold"
        "gcauto"
        "gendebug"
        "alignment"
        "checkindex"
        "checknil"
        "checkdindex"
        "checktype"
        "checkrange"
        "checkset"
        "checkdiv"
