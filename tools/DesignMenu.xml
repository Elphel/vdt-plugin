                    	      label="Timing report"
                        	  icon="clock.png"
                       		  call="VivadoTimingReportSynthesis"/>
                	<menuitem name="VivadoTimimgSummaryReportSynthesis"
                    	      label="Timing summary"
                        	  icon="clock_sum.png"
                       		  call="VivadoTimimgSummaryReportSynthesis"/>
                </menu>
